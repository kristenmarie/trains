<h2><%= @city.name %></h2>

<% if @user == "admin" %>
  <h5><a href="/cities/<%= @city.id %>/edit">Edit</a></h5>
<% end %>

<h3>Stops</h3>
<% if @city.stops.any? %>
  <ul>
    <% @city.stops.each do |stop| %>
      <li><a href="/stops/<%= @stop.id %>"><%= @stop.departure %> - <%= @stop.train.name %></a></li>
    <% end %>
  </ul>
<% else %>
  <p>There are currently no saved stops for this city.</p>
<% end %>
